{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "messages": {
    "$i18n": "locales.yml"
  },
  "title": {
    "$ref": "#/messages/deploy.title"
  },
  "description": {
    "$ref": "#/messages/deploy.description"
  },
  "longDescription": {
    "$ref": "#/messages/deploy.longDescription"
  },
  "type": "object",
  "properties": {
    "api-key": {
      "description": {
        "$ref": "#/messages/deploy.apikeyDescription"
      },
      "type": "string",
      "pattern": "\\S",
      "validator": {
        "v-type": "api-key"
      }
    },
    "resource-prefix": {
      "description": {
        "$ref": "#/messages/deploy.resourcePrefixDescription"
      },
      "type": "string",
      "pattern": "\\S"
    },
    "resource-group": {
      "description": {
        "$ref": "#/messages/deploy.resourceGroupDescription"
      },
      "type": "string",
      "validator": {
        "v-type": "resource-group",
        "params": [
          "api-key"
        ],
        "validator": {
          "v-type": "resource-group",
          "params": [
            "api-key"
          ]
        }
      }
    },
    "region": {
      "description": {
        "$ref": "#/messages/deploy.regionDescription"
      },
      "type": "string",
      "disabled": false,
      "validator": {
        "v-type": "k8s-region",
        "params": [
          "api-key"
        ]
      }
    },
    "newOrExisting": {
      "title": "Decide whether to create new resources or to reuse existing cluster and registry namespace",
      "type": "string",
      "enum": [
        "new",
        "existing"
      ]
    }
  },
  "required": [
    "api-key",
    "resource-prefix",
    "resource-group",
    "region"
  ],
  "form": [
    {
      "type": "validator",
      "url": "/devops/validator/validator-v1.html"
    },
    {
      "type": "password",
      "readonly": false,
      "title": {
        "$ref": "#/messages/deploy.apikey"
      },
      "key": "api-key"
    },
    {
      "type": "text",
      "readonly": false,
      "title": {
        "$ref": "#/messages/deploy.resourcePrefix"
      },
      "key": "resource-prefix"
    },
    {
      "type": "select",
      "readonly": false,
      "key": "resource-group",
      "title": {
        "$ref": "#/messages/deploy.resourceGroup"
      }
    },
    {
      "type": "select",
      "key": "region",
      "title": {
        "$ref": "#/messages/deploy.region"
      }
    },
    {
      "type": "selectfieldset",
      "key": "newOrExisting",
      "titleMap": {
        "new": "Create new resources",
        "existing": "Use existing resources"
      },
      "items": [
        {
          "type": "section",
          "description": "The pipeline will create a Virtual Private Cloud, a Kubernetes cluster and a Container Registry namespace",
          "items": [
          ]
        },
        {
          "type": "section",
          "description": "Select an existing Kubernetes cluster, a Container Registry namespace to store a container image and a Kubernetes namespace to deploy the application.",
          "items": [
          ]
        }
      ]
    }
  ]
}